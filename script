#!/bin/bash 

yay -Syyu --noconfirm fish vesktop hyprland-git hyprshot fastfetch grim slurp hyprpolkitagent spotify spicetify-cli betterbird keepassxc steam waybar fcitx5 nautilus hyprpaper-git ghostty ttf-jetbrains-mono-nerd && exec ./install || read -p "error occured! you might wanna check whats goin' on. continue anyway? (Y/N) " -n 1 -r
if [[ $REPLY =~ ^[Yy]$ ]]; then
   cd ~/
   sudo mkdir clones
   cd clones/
   sudo git clone https://github.com/ntrop6/dotfiles.git
   sudo 'cp' -rf ~/clones/dotfiles/*  ~/.config/ && echo "
should be done! (hopefully)"
fi
if [[ $REPLY =~ ^[Nn]$ ]]; then
   echo "
oke bye bye"
   exit
fi

